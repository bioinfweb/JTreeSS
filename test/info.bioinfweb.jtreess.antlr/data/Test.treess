canvas {
	background-color: none;  /* Transparent background */
	background-image: url("http://example.com/Test.png");
}
 
tree {
	layout: rectangular; 
}
 
#un6gt { /* Some unique node name */
  font-family: "Arial", sans-serif;
  font-size: 8 mm;
  font-weight: bold;
}

node {
	font-size: calc(0.7em + metadataValue(currentNode, "a:flowerSize", "a:averageSize") * 0.01em);
}

*:terminal {  /* This would reference terminal nodes, branches, labels, ... */
	color: blue;
} 

calculation {
	x: 3.0e-10;
	y: calc(3 + 9 * (2 + 6) + 9 + 8);
}

node:matches(:first-child, :last-child) {
	color: #FF0000;
	color: #F00;
}

text-label { 
	-biw-line-position: 25.6;
}

scale {   
  visible : true;
}
